{
  "name": "{name}-node-express",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "yarn serve",
    "serve": "node dist/app.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "tsc && yarn start"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.17.1",
    "@types/inversify": "^2.0.33",
    "@types/inversify-express-utils": "^2.0.0",
    "@types/reflect-metadata": "^0.1.0",
    "nodemon": "1.19.3",
    "typescript": "^3.6.4"
  }
}